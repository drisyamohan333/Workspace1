@model IEnumerable<Employee.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>



<p>
      @Html.ActionLink("Import Employee Names", "ImportEmployees")           
</p>
@using (Html.BeginForm())
{
    
<div style="float: left; padding: 5px; margin: 10px; font-weight: bold;">
   		Filter by manager
</div>
   <div style="float: left; padding: 5px; margin: 10px; font weight: bold;">
   		@Html.DropDownList("EmployeeList", "All")

   </div>
    <div style="float: left; padding: 5px; margin: 10px; font weight: bold;">
   		Salary Range

    </div>
    
   <div style="float: left; padding: 5px; margin: 10px; font weight: bold;">
       <select id="salaryRange" name="salaryRange">
           <option value="null" selected="selected">All</option>
           <option value="1">Less than 10000</option>
           <option value="2">Between 10000 and 40000</option>
           <option value="3">More than 40000</option>
       </select>
   </div>
   <div style="float: left; padding: 5px; margin: 10px; font weight: bold;">
<input type="submit" value="Filter Employees" />
   </div>
<br />
    
    
}






<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.employeemanager.strManager)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.employeemanager.strManager)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
